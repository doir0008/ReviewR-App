<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.doir0008.reviewR" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>reviewR</name>
    <description>
        A Cordova app that allows you to take a picture of anything and rate that thing.
    </description>
    <author email="rdoiron@gmail.com" href="https://github.com/doir0008">
        Ryan Doiron
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="portrait" />
</widget>
